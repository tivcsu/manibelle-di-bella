{
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/about-me",
        "destination": "/about-me.html"
      },
      {
        "source": "/pricing",
        "destination": "/pricing.html"
      },
      {
        "source": "/book-appointment",
        "destination": "/book-appointment.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
